@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="row text-center">
    <div class="col-3"></div>
    <div class="col-6">
        <h2>@ViewData["Title"]</h2>
        <h4>Create a new account</h4>
        <hr />
    </div>
    <div class="col-3"></div>
</div>


<div class="row">

    <div class="col-4"></div>
    <div class="col-4">
        <section>
            <form asp-controller="Account" id="needs-validation" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="col-md-2 control-label"></label>
                    <div class="col-md-12">
                        <input asp-for="Email" class="form-control col-12" required/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-md-2 control-label"></label>
                    <div class="col-md-12">
                        <input asp-for="Password" class="form-control col-12" required/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-check">
                    <div class="">
                        <label class="form-check-label" asp-for="RememberMe">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input checkbox"/>
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="dropdown col-6 form-inline d-inline-block">
                        <button class="btn btn-secondary dropdown-toggle" href="#" type="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            More Options
                        </button>

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" asp-action="ForgotPassword">Forgot Password</a>
                            <a class="dropdown-item" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register</a>
                        </div>
                    </div>

                    <div class="offset-3 d-inline">
                        <button type="submit" class="btn btn-raised btn-primary">Login</button>
                    </div>
                </div>
               
            </form>
        </section>
    </div>
