@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}



<form asp-controller="Account" asp-action="Register" id="needs-validation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    
    <div class="row text-center">
        <div class="col-3"></div>
        <div class="col-6">
            <h2>@ViewData["Title"]</h2>
            <h4>Create a new account</h4>
            <hr />
        </div>
        <div class="col-3"></div>
    </div>

    <div class="row">

        <div class="col-4"></div>
        <div class="col-sm-4">
           
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="col-md-12">
                    <label asp-for="FirstName" class="">First Name</label>
                    <input asp-for="FirstName" class="form-control col-12" required/>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="col-md-6 control-label clabel"></label>
                <div class="col-md-12">
                    <input asp-for="LastName" class="form-control col-12" required/>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>  
            <div class="form-group">
                <label asp-for="Email" class="col-md-6 control-label clabel"></label>
                <div class="col-md-12">
                    <input asp-for="Email" class="form-control col-12" required/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-md-6 control-label clabel"></label>
                <div class="col-md-12">
                    <input asp-for="Password" class="form-control col-12" required/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-md-6 control-label clabel"></label>
                <div class="col-md-12">
                    <input asp-for="ConfirmPassword" class="form-control col-12" required/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-md-10">
                    <button type="submit" class="btn btn-raised btn-primary col-12">Register</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-4"></div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
