@using Microsoft.AspNetCore.Identity
@using RemoteObservatory.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
        </li>
    </ul>
    <form class="form-inline my-2 my-md-0" asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <button type="submit" class="btn btn-outline-secondary my-2 my-sm-0">Log out</button>
    </form>
}
else
{
    <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    </ul>


}
